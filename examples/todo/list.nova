import std 
    operators ops
    collection { map, reduce, filter }
import file ./optional { Optional }

export set, get new, concat, append

List = type (a) { value: a, next: Optional(List) } 

Index = type (list) Int where v < len(list)

set = (list, idx: Index, value) => 
    map(
        list 
        (item, i) => 
	    if idx == i then value else item
    )

get = (list, idx: Index) =>
    loop = (item, cur_idx) =>
        if idx == cur_idx then
            item.value
        else 
            if item.next == None then return None
            loop(item.next, cur_idx + 1)
    loop(list, 0)

